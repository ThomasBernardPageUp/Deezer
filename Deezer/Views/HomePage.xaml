<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Deezer.Views.HomePage">
        <Grid VerticalOptions="FillAndExpand" Margin="15">

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="1"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>


            <Image Source="http://assets.stickpng.com/images/580b57fcd9996e24bc43c51b.png" Grid.ColumnSpan="3"></Image>

            <SearchBar SearchCommand="{Binding CmdSearch}" Text="{Binding ArtistName}" Grid.Row="1" Grid.ColumnSpan="3"></SearchBar>

            <StackLayout BackgroundColor="Blue" Grid.Row="2"></StackLayout>
            <StackLayout BackgroundColor="Green" Grid.Row="2" Grid.Column="2"></StackLayout>
            <StackLayout BackgroundColor="Red" Grid.Row="3"></StackLayout>
            <StackLayout BackgroundColor="Yellow" Grid.Row="3" Grid.Column="2"></StackLayout>



        </Grid>
</ContentPage>
